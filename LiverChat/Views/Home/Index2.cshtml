<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width,
				initial-scale=1.0">
    <title>Bar Chart Example</title>

    <!-- Include Chart.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js">
    </script>

   
</head>

<body>
   
    <h2>Bar Chart Example</h2>

    <!-- Creating an element -->
    <canvas id="myBarChart"
            width="180"
            height="40"></canvas>

    <script>

		// data sample for the chart
		let data = {
		    labels: @Html.Raw(Json.Encode(@ViewBag.objectname)),
			datasets: [{
				label: 'Clinical Extent of Disesase',
				data: @Html.Raw(Json.Encode(@ViewBag.data)),
				backgroundColor: 'rgba(70, 192, 192, 0.6)',
				borderColor: 'rgba(150, 100, 255, 1)',
				borderWidth: 1
			}]
		};

		// Configuration options for the chart
		let options = {
			scales: {
				y: {
					beginAtZero: true
				}
			}
		};

		// Get the canvas element
		let ctx = document.getElementById('myBarChart')
			.getContext('2d');

		// Create the bar chart
		let myBarChart = new Chart(ctx, {
			type: 'bar',
			data: data,
			options: options
		});
    </script>

</body>

</html>
